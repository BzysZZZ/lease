<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.pzj.lease.web.admin.mapper.FeeKeyMapper">
    
    <resultMap id="FeeKeyVoMap" type="com.pzj.lease.web.admin.vo.fee.FeeKeyVo">
        <id property="id" column="id"/>
        <result property="name" column="name"/>
        <collection property="feeValueList" ofType="com.pzj.lease.model.entity.FeeValue">
            <id property="id" column="fee_val_id"/>
            <result property="name" column="fee_val_name"/>
            <result property="unit" column="fee_val_unit"/>
            <result property="feeKeyId" column="fee_key_id"/>
        </collection>
    </resultMap>

    <select id="listFeeInfo" resultMap="FeeKeyVoMap">
        select k.id,
               k.name,
               k.is_deleted,
               v.id fee_val_id,
               v.name fee_val_name,
               v.unit fee_val_unit,
               v.fee_key_id fee_val_key_id,
               v.is_deleted
        from fee_key k
        left join fee_value v
        on k.id=v.fee_key_id and v.is_deleted=0
        where k.is_deleted=0
    </select>
</mapper>
